@model Web.UI.Mvc.Core.ViewModel.UniversityVM
@{
    ViewData["Title"] = "Single";
    ViewBag.universities = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section _pageStyle{
    <!-- SPECIFIC CSS -->
    <link href="~/css/product_page.css" rel="stylesheet">
    <style>
        .faculty {
            background: #f8f8f8;
            height: 50px
        }

            .faculty a {
                text-align: center;
                width: 100%;
                height: 100%;
                color: black;
                line-height: 50px;
                font-size: 18px;
            }

            .faculty:hover {
                background: #eaeaea;
            }
    </style>
}
<main>
    <div class="top_banner ">
        <div class="row">
            <div class="opacity-mask d-flex align-items-center" data-opacity-mask="rgba(0, 0, 0, 0.3)">
                <div class="la-pull-left col-6" dir="ltr">
                    <div>
                        @if (string.IsNullOrEmpty(Model.university.Logo))
                        {
                            <img class="img-thumbnail lazy" style="max-width: 200px" src="~/img/no.png" alt="">
                        }
                        else
                        {
                            <img class="img-thumbnail lazy" style="max-width: 200px" src="~/image/university/@Model.university.Id/@Model.university.Logo" alt="">
                        }
                    </div>
                </div>
                <div class="container col-6" dir="">
                    <div class="breadcrumbs">
                        <ul dir="rtl">
                            <li><a href="@Url.Action("Index", "Home")">الرئيسية</a></li>
                            <li><a href="@Url.Action("Index")">الجامعات</a></li>
                            <li>@Model.university.ArName</li>
                        </ul>
                    </div>
                    <h1> @Model.university.ArName</h1>
                    <h1>@Model.university.OriganName </h1>
                    @*<h3>@Model.university.City.Name</h3>*@
                </div>
            </div>
        </div>
        @if (string.IsNullOrEmpty(Model.university.Logo))
        {
            <img class="img-thumbnail mt-4 lazy" style="max-width: 300px" src="~/img/bg_cat_shoes.jpg" alt="">
        }
        else
        {
            <img class="img-thumbnail mt-4 lazy" src="~/image/university/@Model.university.Id/banner.png" alt="">
        }
    </div>
    <!-- /top_banner -->
    <div class="container margin_30">
        <div class="row">
            <div class="col-md-6">
                <div class="all">
                    <div class="slider">
                        <div class="owl-carousel owl-theme main">

                            @*@foreach (var item in Model.universities)
                                {
                                    <div style="background-image: url(../../wwwroot/img/@item.University.Id/@item.University.UniversityGalery.li);" class="item-box"></div>
                                }*@
                            @foreach (var item in Model.universityGallery)
                            {
                                <div class="item-box">
                                    <img style="width: 100%" src="~/image/university/@Model.university.Id/Gallery/@item.Link" />
                                </div>
                            }
                        </div>
                        <div class="left nonl"><i class="ti-angle-left"></i></div>
                        <div class="right"><i class="ti-angle-right"></i></div>
                    </div>
                    <div class="slider-two">
                        <div class="owl-carousel owl-theme thumbs">
                            @foreach (var item in Model.universityGallery)
                            {
                                <div class="item active">
                                    <img style="width: 100%" src="~/image/university/@Model.university.Id/Gallery/@item.Link" />
                                </div>
                            }
                        </div>
                        <div class="left-t nonl-t"></div>
                        <div class="right-t"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <div class="row justify-content-between" dir="rtl">
                        <div class="">
                            <h3>وصف الجامعة</h3>
                            <p>@Model.university.About</p>
                        </div>
                        <div class="row" style="width: 100%; margin-top: 50px">
                            <div class="table-responsive">
                                <table class="table table-sm table-striped">
                                    <tbody>
                                        <tr>
                                            <td><strong>تاريخ التأسيس</strong></td>
                                            <td>@Model.university.FoundYear</td>
                                        </tr>
                                        <tr>
                                            <td><strong>الترتيب العالمي</strong></td>
                                            <td>@Model.university.GlobalPlace</td>
                                        </tr>
                                        <tr>
                                            <td><strong>الترتيب المحلي</strong></td>
                                            <td>@Model.university.LocalPlace</td>
                                        </tr>
                                        <tr>
                                            <td><strong>عدد الطلاب الاجمالي</strong></td>
                                            <td>@Model.university.NumberOfStudent</td>
                                        </tr>
                                        <tr>
                                            <td><strong>عدد الطلاب الاجانب</strong></td>
                                            <td>@Model.university.NumberOfReStudent</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /table-responsive -->
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
    <div class="tabs_product">
        <div class="container" dir="rtl">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a id="tab-A" href="#pane-A" class="nav-link active" data-toggle="tab" role="tab">الشؤون الأكاديمية</a>
                </li>
                <li class="nav-item">
                    <a id="tab-B" href="#pane-B" class="nav-link" data-toggle="tab" role="tab">معلومات التواصل</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- /tabs_product -->
    <div class="tab_content_wrapper">
        <div class="container">
            <div class="tab-content" role="tablist">
                <div id="pane-A" class="card tab-pane fade active show" role="tabpanel" aria-labelledby="tab-A">
                    <div class="card-header" role="tab" id="heading-A">
                        <h5 class="mb-0">
                            <a class="collapsed" data-toggle="collapse" href="#collapse-A" aria-expanded="false" aria-controls="collapse-A">
                                الشؤون الأكاديمية
                            </a>
                        </h5>
                    </div>
                    <div id="collapse-A" class="collapse" role="tabpanel" aria-labelledby="heading-A">
                        <div dir="rtl" class="row" style="margin-top: -30px">
                            @foreach (var item in Model.faculties)
                            {
                                <div class="col-md-2 col-sm-6 faculty">
                                    <a href="@Url.Action("Faculty",new { Id=item.Id})" style="text-align: center">@item.Name</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- /TAB A -->
                <div id="pane-B" class="card tab-pane fade" role="tabpanel" aria-labelledby="tab-B">
                    <div class="card-header" role="tab" id="heading-B">
                        <h5 class="mb-0">
                            <a class="collapsed" data-toggle="collapse" href="#collapse-B" aria-expanded="false" aria-controls="collapse-B">
                                معلومات التواصل
                            </a>
                        </h5>
                    </div>
                    <div id="collapse-B" class="collapse" role="tabpanel" aria-labelledby="heading-B">
                        <div class="row" dir="rtl">
                            <div class="col-md-6 col-sm-12">
                                <table class="table" style='border-collapse: collapse;'>
                                    <tr>
                                        <td> <b>الموقع الالكتروني :</b></td>
                                        <td><a href="@Model.university.Website">@Model.university.Website</a></td>
                                    </tr>
                                    <tr>
                                        <td> <b>البريد الالكتروني :</b></td>
                                        <td><a href="mailto:@Model.university.Mail">@Model.university.Mail</a></td>
                                    </tr>
                                    <tr>
                                        <td> <b>رقم الهاتف :</b></td>
                                        <td><a href="tel:@Model.university.Phone">@Model.university.Phone</a></td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <iframe src="@Model.university.Map" height="250" style="border: 0;width:100%" allowfullscreen="" loading="lazy"></iframe>
                            </div>
                        </div>
                        <!-- /card-body -->
                    </div>
                </div>
                <!-- /tab B -->
            </div>
            <!-- /tab-content -->
        </div>
        <!-- /container -->
    </div>
    <!-- /tab_content_wrapper -->

</main>

@section _pageScripts{


    <!-- SPECIFIC SCRIPTS -->
    <script src="~/js/carousel_with_thumbs.js"></script>

}
