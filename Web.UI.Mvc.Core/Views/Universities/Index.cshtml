            <div class="col-lg-9">
                <div class="row">
                    @foreach (var item in Model.universities)
                    {
                        <div class="col-6 col-md-3 col-xl-3">
                            <div class="grid_item">
                                <figure>
                                    <a href="@Url.Action("Single",new { Id=item.Id})">
                                        @if (string.IsNullOrEmpty(item.Logo))
                                        {
                                            <img class="img-fluid lazy" src="~/img/no.png" alt="">
                                        }
                                        else
                                        {
                                            <img class="img-fluid lazy" src="~/image/university/@item.Id/@item.Logo" alt="">
                                        }
                                    </a>
                                </figure>
                                <a href="@Url.Action("Single",new { Id=item.Id})">
                                    <h3>@item.OriganName</h3><br />
                                    <h3>@item.ArName</h3>
                                    <h6>@item.CityId</h6>
                                    @*<h6>@item.City.Name</h6>*@
                                </a>
                            </div>
